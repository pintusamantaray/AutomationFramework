package day21;

import java.util.Iterator;
import java.util.Set;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class BankTransaction {
	
	public static void main (String [] args) throws InterruptedException {
		
		WebDriver driver = new ChromeDriver ();
		
		driver.manage().window().maximize();
		
		driver.get("https:www.idfcfirstbank.com");
		
		Thread.sleep(2000);
		
		driver.findElement(By.xpath("//*[@id='dropdownMenuLogin']")).click();
		
		driver.findElement(By.xpath("//*[@href=\"https://my.idfcfirstbank.com/login\"]")).click();
		
		Thread.sleep(2000);
		
//		driver.findElement(By.xpath("//div[@class='sc-fsYeqs OZPfw']"));
		
		 Set<String> handles = driver.getWindowHandles();
         
         // Store the handles in a list (or you can directly use iterator)
         Iterator<String> iterator = handles.iterator();
         
         // Store the parent window handle
         String parentWindow = iterator.next();
         
         // Skip to the next window (index 1)
         if (iterator.hasNext()) {
             String childWindow = iterator.next();
             
             // Switch to the window at index 1
             driver.switchTo().window(childWindow);
             
             
         }
		
		driver.findElement(By.xpath("//input[@type='tel']")).sendKeys("7008246898");
		
		driver.findElement(By.xpath("//*[@type=\"submit\"]")).click();
		
		driver.findElement(By.xpath("//*[@name='login-password-input']")).sendKeys("Jamukoli@1");
        
        driver.findElement(By.xpath("//*[@type=\"submit\"]")).click();
        
	}

}
